{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2022",
      "moduleResolution": "node",
      "sourceMap": true,
      "incremental": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "baseUrl": ".",
      "outDir": "bin",
      "tsBuildInfoFile": ".tsbuildinfo",
    },
    "include": [
      "src",
      "test"
    ],
    "exclude": [
      "bin",
      "node_modules"
    ]
  }
